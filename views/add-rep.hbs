<div class="container-fluid">
    <br><br>
    <div class="form-group row">
        <div class="form-group col-sm-1" align="right">
            <label for="staticName" class="col-form-label">Name: </label>
        </div>
         <div class="form-group col-sm-2">
        <input readonly class="form-control-plaintext" id="staticName" value="{{user.username}}"/>
        </div>
        <div class="form-group col-sm-1" align="right">
            <label for="staticDept" class="col-form-label">Department: </label>    
        </div>
        <div class="form-group col-sm-2">
        <input readonly class="form-control-plaintext" id="staticDept" value="EXAMPLE"/>
        </div>
        <div class="form-group col-sm-1" align="right">
            <label for="staticEmail" class="col-form-label">Email: </label>    
        </div>
        <div class="form-group col-sm-5">
        <input readonly class="form-control-plaintext" id="staticEmail" value="verylongEXAMPLE@verylongexample.com"/>
        </div>
    </div>
    

    <h5 class="alert alert-secondary"> Requisition# {{requisition.id}}</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Encumbered Funds</th>
                <th>Total Expenses</th>
                <th>Remaining Balance</th>
            </tr>
            <tr>
                <td>{{requisition.encumbered}}</td>
                <td>{{requisition.totalSpent}}</td>
                <td>{{requisition.balance}}</td>
            </tr>
        </thead>
    </table>
    
    
        <h5 class="alert alert-secondary">Purpose: {{requisition.purpose}}</h5>
    <form>
        <div class="form-group row">
           
            <div class="form-group col-sm-2" align="center">
                <label for="staticDepart" class="col-form-label">Departure Date</label>
            </div>
            <div class="form-group col-sm-4" align="left">
                <input readonly class="form-control-plaintext" id="staticDepart" value="{{requisition.departureDate}}"/>
            </div>
             <div class="form-group col-sm-2" align="center">
                <label for="staticDestination" class="col-form-label">Destination</label>
            </div>
            <div class="form-group col-sm-4" align="left">
                <input readonly class="form-control-plaintext" id="staticDestination" value="{{requisition.destination}}"/>
            </div>
             
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-2" align="center">
                <label for="staticReturn" class="col-form-label">Return Date</label>
            </div>
            <div class="form-group col-sm-4" align="left">
                <input readonly class="form-control-plaintext" id="staticReturn" value="{{requisition.returnDate}}"/>
            </div> 
            <div class="form-group col-sm-2" align="center">
                <label for="staticDestination" class="col-form-label">Departing From</label>
            </div>
            <div class="form-group col-sm-4" align="left">
                <input readonly class="form-control-plaintext" id="staticDestination" value="{{requisition.departLocation}}"/>
            </div>
           
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-1" align="right">
                <label for="staticObjectives" class="col-form-label">Objectives</label>
            </div>
            <div class="form-group col-sm-10" align="center">
                <textarea readonly class="form-control-plaintext" rows="8" id="staticObjectives">{{requisition.objectives}}</textarea>
            </div> 
            <div class="form-group col-sm-1"></div>
        </div>
    </form>
    
    <form action="/submitExpenses" method="POST">
        <h5 class="alert alert-secondary">Expenses to Claim</h5>
        <div class="form-group row">
            
            <div class="form-group col-sm-2" align="center">
                <label for="airfareInput" class="col-form-label">Airfare</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="airfareInput" placeholder="0.00" step="0.01" name="airfare"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="mileageInput" class="col-form-label">Mileage</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="mileageInput" placeholder="0.00" step="0.01" name="mileage"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-2" align="center">
                <label for="baggageInput" class="col-form-label">Baggage</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="baggageInput" placeholder="0.00" step="0.01" name="baggage"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="carRentalInput" class="col-form-label">Car Rental</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="carRentalInput" placeholder="0.00" step="0.01" name="carRental"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
         <div class="form-group row">
            <div class="form-group col-sm-2" align="center">
                <label for="lodgingInput" class="col-form-label">Lodging</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="lodgingInput" placeholder="0.00" step="0.01" name="lodging"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="parkingInput" class="col-form-label">Parking</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="parkingInput" placeholder="0.00" step="0.01" name="parking"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
         <div class="form-group row border-bottom">
            <div class="form-group col-sm-2" align="center">
                <label for="mealsInput" class="col-form-label">Meals</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="mealsInput" placeholder="0.00" step="0.01" name="meals"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="taxiInput" class="col-form-label">Taxi</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="taxiInput" placeholder="0.00" step="0.01" name="taxi"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <br><br>
        </div>
        <input type="hidden" value="" name="expenseTotal"/>
        <input type="hidden" name="requisitionId" value="{{requisition.id}}" />
        <button type="submit" class="btn btn-info float-right" id="calculateButton">Calculate</button>
       
        {{!-- <button type="button" id="mealButton">Meals</button> --}}
    </form>
    <br><br><br><br>
</div>
