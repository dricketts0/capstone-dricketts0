            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="carRentalInput" placeholder="0.00" value="{{report.carRental}}" step="0.01" name="carRental"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
         <div class="form-group row">
            <div class="form-group col-sm-2" align="center">
                <label for="lodgingInput" class="col-form-label">Lodging</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="lodgingInput" placeholder="0.00" value="{{report.lodging}}" step="0.01" name="lodging"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="parkingInput" class="col-form-label">Parking</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="parkingInput" placeholder="0.00" value="{{report.parking}}" step="0.01" name="parking"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
         <div class="form-group row border-bottom">
            <div class="form-group col-sm-2" align="center">
                <label for="mealsInput" class="col-form-label">Meals</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="mealsInput" placeholder="0.00" value="{{report.meals}}" step="0.01" name="meals"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="taxiInput" class="col-form-label">Taxi</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="taxiInput" placeholder="0.00" value="{{report.taxi}}" step="0.01" name="taxi"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <br><br>
        </div>
        <input type="hidden" value="0" name="expenseTotal"/>
