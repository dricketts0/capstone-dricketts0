                <input type="number" class="form-control" id="airfareInput" placeholder="0.00" value="{{report.airfare}}" step="0.01" name="airfare"/>
            </div>
            <div class="form-group col-sm-1"></div>
            <div class="form-group col-sm-2" align="center">
                <label for="mileageInput" class="col-form-label">Mileage</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="mileageInput" placeholder="0.00" value="{{report.mileage}}"step="0.01" name="mileage"/>
            </div>
            <div class="form-group col-sm-1"></div>
        </div>
        <div class="form-group row">
            <div class="form-group col-sm-2" align="center">
                <label for="baggageInput" class="col-form-label">Baggage</label>
            </div>
            <div class="form-group col-sm-3">
                <input type="number" class="form-control" id="baggageInput" placeholder="0.00" value="{{report.baggage}}" step="0.01" name="baggage"/>
            </div>
