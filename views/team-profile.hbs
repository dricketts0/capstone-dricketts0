<h1>TEAM PROFILE</h1>
<br><br>
<table class="table table-striped">
  
{{#if flashes}}
{{ flashes }}
{{/if}}
  <h4>Budget for {{team.teamCode}} - {{team.teamName}}</h4>
  <thead class="thead-dark">
    <tr>
      <th>Team Budget</th>
      <th>Total Allocated</th>
      <th>Total Expenses</th>
      <th>Team Balance</th>
    </tr>
  </thead>
    <tr>
      <td>{{team.budget}}</td>
      <td>{{team.totalAllocated}}</td>
      <td>{{team.totalSpent}}</td>
      <td>{{team.balance}}</td>
   </tr>
</table> 
<br><br>
<h4>Members of {{team.teamCode}} - {{team.teamName}}</h4>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>User Budget</th>
      <th>Total Encumbered</th>
      <th>Total Spent</th>
      <th>User Balance</th>
    </tr>
  </thead>
  {{#each teamUsers}}
    <tr>
      <td><a href="/editUser/{{this.id}}" class="btn btn-info" data-toggle="button">Edit Budget</a></td>
      <td>{{this.id}}</td>
      <td>{{this.firstName}} {{this.lastName}}</td>
      <td>{{this.email}}</td>
      <td>{{this.budget}}</td>
      <td>{{this.totalEncumbered}}</td>
      <td>{{this.totalSpent}}</td>
      <td>{{this.balance}}</td>
    </tr>
  {{/each}}
</table>
<br><br>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th>Expense Req Number</th>
      <th>Start Date</th>
      <th>Funds Encumbered</th>
      <th>Total Spent</th>
      <th>Balance of Requisition</th>
    </tr>
    </thead>
{{#each teamUsers}}
  {{#each this.requisitions}}
    <tr>
      <td><a href="/editReq/{{this.id}}" class="btn btn-info" data-toggle="button">Edit</a></td>
      <td><a href="/addReport/{{this.id}}" class="btn btn-secondary" data-toggle="button">Add Expense Report</a></td>
      <td><a href="/deleteReq/{{this.id}}" class="btn btn-warning" data-toggle="button">Delete</a>
      <td>{{this.id}}</td>
      <td>{{this.departureDate}}</td>
      <td>{{this.encumbered}}</td>
      <td>{{this.totalSpent}}</td>
      <td>{{this.balance}}</td>
    </tr>
    <tr class="table-info">
      <thead>
        <td>Filed Reports towards Requisition</td>
      </thead>
    </tr>
    <tr>
      <thead class="table-info">
        <th></th>
        <th></th>
        <th class="align-middle">Report Number</th>
        <th class="align-middle">Total of Expenses</th>
      </thead>
    </tr>
     {{#each this.reports }}
      <td><a href="/editReport/{{this.id}}" class="btn btn-info" data-toggle="button">Edit</a></td>
      <td><a href="/deleteReport/{{this.id}}" class="btn btn-warning" data-toggle="button">Delete</a>
      <td>{{this.id}}</td>
      <td>{{this.expenseTotal}}</td>
     {{/each}}
   {{/each}}
  {{/each}}
</table>